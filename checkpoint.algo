ALGORITHM Checkpoint_Algo 
VAR
    nbWords,sumChar,nbVowels :INTEGER :=0;
BEGIN
    FOR i FROM 0 TO str length-1  DO
        IF ((str[i]:=" ") OR (str[i]:=".")) THEN
        nbWords := nbWords+1;
        END_IF
        IF ((str[i]:="a") OR (str[i]:="i") OR (str[i]:="e") OR (str[i]:="o") OR (str[i]:="u")) THEN
        nbVowels := nbVowels +1 ;
        END_IF
    END_FOR
    sumChar:= str length - nbWords;
    Read(sumChar);
    Read(nbWords);
    Read(nbVowels;)
END